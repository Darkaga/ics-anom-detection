# =============================================================================
# ICS Anomaly Detection - Environment Configuration (Phase 1 - Real ICSSIM)
# =============================================================================

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
# Management interface (has internet access)
MGMT_INTERFACE=ens18
MGMT_IP=10.2.20.81

# OT capture interface (isolated)
OT_INTERFACE=ens19

# ICSSIM Network Subnets (DO NOT CHANGE - hardcoded in ICSSIM)
OT_NETWORK_SUBNET=192.168.0.0/24
OT_PHYSICAL_SUBNET=192.168.1.0/24

# Collection/ML networks (for Phase 2+)
COLLECT_SUBNET=172.21.0.0/24
ML_SUBNET=172.22.0.0/24
MGMT_SUBNET=172.23.0.0/24

# -----------------------------------------------------------------------------
# ICSSIM Configuration
# -----------------------------------------------------------------------------
# Component IPs (hardcoded in ICSSIM - for reference)
ICSSIM_PLC1_IP=192.168.0.11
ICSSIM_PLC2_IP=192.168.0.12
ICSSIM_HMI1_IP=192.168.0.21
ICSSIM_HMI2_IP=192.168.0.22
ICSSIM_HMI3_IP=192.168.0.23
ICSSIM_ATTACKER_IP=192.168.0.42
ICSSIM_PHYSICAL_SIM_IP=192.168.1.31

# Modbus Port
MODBUS_PORT=502

# -----------------------------------------------------------------------------
# MinIO Object Storage (Phase 2+)
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=change-me-in-production
MINIO_ADDRESS=:9000
MINIO_CONSOLE_ADDRESS=:9001

# S3 Buckets
BUCKET_PCAPS=pcaps
BUCKET_ZEEK_LOGS=zeek-logs
BUCKET_ZEEK_FEATURES=zeek-features
BUCKET_MODELS=models

# -----------------------------------------------------------------------------
# Zeek Configuration (Phase 2)
# -----------------------------------------------------------------------------
ZEEK_VERSION=6.0
ZEEK_CAPTURE_FILTER="net 192.168.0.0/24 and tcp port 502"
ZEEK_LOG_DIR=/zeek/logs
ZEEK_PCAP_DIR=/zeek/pcaps

# -----------------------------------------------------------------------------
# Featurizer Service (Phase 3)
# -----------------------------------------------------------------------------
FEATURIZER_PORT=8081
FEATURIZER_WORKERS=4
FEATURE_WINDOW_SECONDS=60
FEATURE_INPUT_DIM=32

# -----------------------------------------------------------------------------
# Model Service (Phase 4)
# -----------------------------------------------------------------------------
MODEL_PORT=8080
MODEL_WORKERS=2
MODEL_TYPE=autoencoder
MODEL_DEVICE=cuda
MODEL_THRESHOLD=0.95

# Autoencoder architecture
AE_INPUT_DIM=32
AE_HIDDEN_DIMS=16,8
AE_LATENT_DIM=4

# -----------------------------------------------------------------------------
# Dashboard (Phase 5)
# -----------------------------------------------------------------------------
DASHBOARD_PORT=8501
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# -----------------------------------------------------------------------------
# GPU Configuration
# -----------------------------------------------------------------------------
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
TZ=America/Chicago

# -----------------------------------------------------------------------------
# LLM Enrichment (Future - Placeholder)
# -----------------------------------------------------------------------------
LLM_ENABLED=false
LLM_PROVIDER=anthropic
LLM_API_KEY=sk-ant-placeholder
LLM_MODEL=claude-sonnet-4-20250514
